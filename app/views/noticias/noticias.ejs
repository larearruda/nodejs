<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Portal de notícias</title>
		</head>
	<body>
		<!-- adicionar botao para abrir formulário /noticia/salvar -->
		<!-- <button onclick=''> </button> -->
		<h1>Notícia</h1>
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>Título</th>
					<th>Notícias</th>
				</tr>
			</thead>
			<tbody>
			<% for(var i=0; i < noticias.length; i++) { %>
				<tr>
					<td> <%= noticias[i].id %> </td>
					<td> <%= noticias[i].titulo %> </td>
					<td> <%= noticias[i].noticia %> </td>
				</tr>
			<% } %>
			</tbody>
		</table>
	</body>
</html>