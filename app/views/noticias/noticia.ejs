	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Portal de notícias</title>
		</head>
	<body>

		<h1><%= noticia[0].titulo %></h1>
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>Título</th>
					<th>Notícias</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td> <%= noticia[0].id %> </td>
					<td> <%= noticia[0].titulo %> </td>
					<td> <%= noticia[0].noticia %> </td>
				</tr>
			</tbody>
		</table>
	</body>
</html>